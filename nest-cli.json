{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "server/src",
  "compilerOptions": {
    "tsConfigPath": "tsconfig.nest.json",
    "webpack": false,
    "deleteOutDir": false,
    "assets": [
      {
        "include": "../package-commonjs.json",
        "outDir": "./",
        "watchAssets": false
      }
    ],
    "plugins": [
      {
        "name": "@nestjs/swagger",
        "options": {
          "classValidatorShim": true,
          "introspectComments": true,
          "dtoFileNameSuffix": [".dto.ts", ".schema.ts"]
        }
      }
    ]
  }
}
